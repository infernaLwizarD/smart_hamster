<%= form_with(model: @math_training) do |form| %>
  <div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title m-0">Параметры</h3>
      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
      </div>
    </div>

    <div class="card-body">
      <%= render "users/shared/error_messages", resource: @math_training %>

      <%= form.hidden_field :user_id, value: current_user.id %>
      <div class="form-group">
        <label>Арифметические действия:</label><br>
        <span class="pl-4 d-inline-block">
        <% MathTraining::OPERATIONS.each do |val| %>
            <%= form.check_box :operations, {multiple: true, checked: form.object.operations&.include?(val)}, val, nil %>
            <%= form.label :operations, value: val %><br>
        <% end %>
        </span>
      </div>
      <div class="form-group">
        <%= form.label :timer, "Таймер" %>
        <%= form.text_field :timer, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :min_number, "Минимальное число" %>
        <%= form.text_field :min_number, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :max_number, "Максимальное число" %>
        <%= form.text_field :max_number, class: "form-control" %>
      </div>

    </div>

    <div class="card-footer">
      <%= draw_back_button(path: back_path) %>
      <%= form.submit 'Начать', class: 'btn btn-success float-right' %>
    </div>
  </div>
<% end %>