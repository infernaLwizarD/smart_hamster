<div class="content-wrapper px-2 py-2 text-sm">
  <% if @breadcrumbs.present? %>
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <% if @main_title.present? %>
              <h1><%= @main_title || '' %></h1>
            <% end %>
          </div>
          <div class="col-sm-6">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href=<%= root_path %>>Главная</a></li>

                <% @breadcrumbs.each do |item| %>
                  <% if @breadcrumbs.last == item %>
                    <li class="breadcrumb-item active" aria-current="page"><%= item[:title] %></li>
                  <% elsif item[:path].blank? %>
                    <li class="breadcrumb-item"><%= item[:title] %></li>
                  <% else %>
                    <li class="breadcrumb-item"><a href=<%= item[:path] %>><%= item[:title] %></a></li>
                  <% end %>
                <% end %>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </section>
  <% end %>

  <section class="content">
    <div class="container-fluid">
      <%#= render 'flash' %>
      <%= yield %>
      <div class="row"></div>
    </div>
  </section>
</div>
