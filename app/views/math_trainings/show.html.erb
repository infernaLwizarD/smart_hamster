<%
  @breadcrumbs = [
    {
      title: 'Математический тренажёр',
      path: math_trainings_path
    },
    {
      title: 'Параметры'
    },
  ]
%>

<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title m-0">Параметры</h3>
    <div class="card-tools">
      <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
    </div>
  </div>

  <div class="card-body">
    <div class="form-group">
      <label>Арифметические действия</label>
      <div class="pl-4"><%= @math_training.operations.reject { |o| o == '0' }.join('<br>').html_safe %></div>
    </div>
    <div class="form-group">
      <label>Таймер</label>
      <div><%= @math_training.timer %></div>
    </div>
    <div class="form-group">
      <label>Минимальное число</label>
      <div><%= @math_training.min_number %></div>
    </div>
    <div class="form-group">
      <label>Максимальное число</label>
      <div><%= @math_training.max_number %></div>
    </div>
  </div>

  <div class="card-footer ">
    <% if policy(@math_training).update? %>
      <%= link_to(icon('fas', 'edit', 'Редактировать'), edit_math_training_path(@math_training), class: 'btn btn-primary') %>
    <% end %>

    <%= draw_back_button(path: math_trainings_path) %>

    <% if policy(@math_training).destroy? %>
      <%= draw_delete_button(path: @math_training) %>
    <% end %>
  </div>
</div>

