<div id="main-container" style="display:flex;justify-content:center;align-items:center;flex-direction:column;padding-top:15%;">

  <div class="login-box">
<!--    <div class="login-logo"></div>-->

    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Вход в систему</h3>
      </div>

      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <% if notice %>
            <div class="alert alert-danger alert-dismissible">
              <%= notice %>
            </div>
          <% end %>
          <% if alert %>
            <div class="alert alert-danger alert-dismissible">
              <%= alert %>
            </div>
          <% end %>

          <div class="input-group mb-3">
            <%= f.text_field :login, autofocus: true, autocomplete: "login", class: "form-control",
                             placeholder: "Логин", required: true %>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-user"></span>
              </div>
            </div>
          </div>

          <div class="input-group mb-3">
            <%= f.password_field :password, autocomplete: "off", class: "form-control",
                                 placeholder: "Пароль", required: true %>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, "Запомнить меня", class: "font-weight-normal" %>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "Войти", class: 'btn btn-primary btn-block' %>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>

  </div>
</div>


