<div class="register-box">

  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Регистрация</h3>
    </div>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :role_id, value: 3 %>

        <div class="input-group mb-3">
          <%= f.text_field :username, autofocus: true, autocomplete: "login", class: "form-control",
                           placeholder: "Имя пользователя", required: true %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>

        <div class="input-group mb-3">
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control",
                           placeholder: "Email", required: true %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-at"></span>
            </div>
          </div>
        </div>

        <div class="input-group mb-3">
          <%= f.password_field :password, autocomplete: "off", class: "form-control",
                               placeholder: "Пароль", required: true %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>

        <div class="input-group mb-3">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control",
                               placeholder: "Повторите пароль", required: true %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <div class="actions mb-2">
              <%= f.submit "Зарегистрироваться", class: 'btn btn-primary btn-block' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="card-footer">
      <%= render "users/shared/links" %>
    </div>
  </div>

</div>
