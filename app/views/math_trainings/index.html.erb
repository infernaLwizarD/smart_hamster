<%
  @main_title = 'Математический тренажёр'
  @breadcrumbs = [
    {
      title: 'Математический тренажёр'
    }
  ]
%>

<% if policy(MathTraining).create? %>
  <div class="row">
    <div class="col-md-12">

      <div class="card">
        <div class="card-body">
          <p class="card-text">
            Чтобы решать примеры нужно настроить генератор задач, нажмите на кнопку ниже и задайте параметры.
          </p>
          <%= draw_new_button(path: new_math_training_path(), label: 'Настроить', button: true, bg_class: 'btn-outline-primary') %>
        </div>
      </div>

    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">

    <div class="card card-primary">
      <div class="card-header">
        <h3 class="card-title m-0">История</h3>
        <div class="card-tools float-right">
          <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
        </div>
      </div>

      <div class="card-body p-0">
        <table class="table table-striped table-bordered">
          <thead>
          <tr>
            <th style="width:10px;">№</th>
            <th>Арифметические действия</th>
            <th>Таймер</th>
            <th>Минимальное число</th>
            <th>Максимальное число</th>
          </tr>
          </thead>
          <tbody>
          <% @math_trainings.each_with_index do |training, index| %>
            <tr>
              <td><%= link_to index + 1, training %></td>
              <td><%= link_to training.operations, training %></td>
              <td><%= link_to training.timer, training %></td>
              <td><%= link_to training.min_number, training %></td>
              <td><%= link_to training.max_number, training %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

      </div>
    </div>

  </div>
</div>